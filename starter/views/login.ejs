<%- include("partials/header") %>
<%- include("partials/flash") %>

<div class="login-container">
    <form action="/login" method="post" class="login-form">
        <div class="form-group">
            <label for="username" class="form-label">Select your username</label>
            <select name="username" id="username" class="form-select">
                    <% for(let scientist of researchers) { %>
                    <option value=<%= scientist.fullname %>><%= scientist.fullname %></option>
                    <% } %>
            </select>
        </div>
        <div class="form-group">
            <label for="pincode" class="form-label">Pincode</label>
            <input type="password" name="pincode" id="pincode" class="form-input" placeholder="Pincode">
        </div>
        <div class="form-group">
            <button type="submit" class="login-button">Login</button>
        </div>
    </form>
</div>


<%- include("partials/footer") %>